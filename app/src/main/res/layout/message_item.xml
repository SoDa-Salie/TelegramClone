<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_user_message"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_user_message">

        <TextView
                android:id="@+id/chat_user_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Привет, я самая сладкая булка"
                android:textColor="@color/colorBlack"
                android:gravity="end"
                android:padding="@dimen/appPadding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/chat_user_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="23:51"
                android:textColor="@color/colorBlack"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chat_user_message"
                android:layout_marginEnd="@dimen/app_small_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_recieved_message"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_recieved_message">

        <TextView
                android:id="@+id/chat_recieved_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Привет, я пирожок"
                android:textColor="@color/colorBlack"
                android:gravity="end"
                android:padding="@dimen/appPadding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/chat_recieved_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="23:51"
                android:textColor="@color/colorBlack"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chat_recieved_message"
                android:layout_marginEnd="@dimen/app_small_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_recieved_image_message"
            android:layout_width="@dimen/chat_image_width"
            android:layout_height="@dimen/chat_image_height"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:id="@+id/chat_recieved_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="TODO"/>

        <TextView
                android:id="@+id/chat_recieved_image_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="23:51"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/chat_recieved_image"
                android:layout_marginEnd="@dimen/app_small_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_user_image_message"
            android:layout_width="@dimen/chat_image_width"
            android:layout_height="@dimen/chat_image_height"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:id="@+id/chat_user_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="TODO"/>

        <TextView
                android:id="@+id/chat_user_image_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="23:51"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                android:layout_marginEnd="@dimen/app_small_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>