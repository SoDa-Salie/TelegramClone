<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_recieved_voice_message"
            android:background="@drawable/background_recieved_message"
            android:layout_width="@dimen/chat_voice_width"
            android:layout_height="@dimen/chat_voice_height"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:id="@+id/chat_recieved_btn_play"
                android:layout_width="@dimen/btn_voice_width"
                android:layout_height="@dimen/btn_voice_height"
                android:src="@drawable/ic_play_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
                android:id="@+id/chat_recieved_btn_stop"
                android:layout_width="@dimen/btn_voice_width"
                android:layout_height="@dimen/btn_voice_height"
                android:src="@drawable/ic_stop_blue"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/chat_recieved_voice_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="23:51"
                android:textColor="@color/colorGray"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/app_small_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_user_voice_message"
            android:background="@drawable/background_user_message"
            android:layout_width="@dimen/chat_voice_width"
            android:layout_height="@dimen/chat_voice_height"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:id="@+id/chat_user_btn_play"
                android:layout_width="@dimen/btn_voice_width"
                android:layout_height="@dimen/btn_voice_height"
                android:src="@drawable/ic_play_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
                android:id="@+id/chat_user_btn_stop"
                android:layout_width="@dimen/btn_voice_width"
                android:layout_height="@dimen/btn_voice_height"
                android:src="@drawable/ic_stop_green"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/chat_user_voice_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="23:51"
                android:textColor="@color/colorGreenDarker"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/app_small_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>